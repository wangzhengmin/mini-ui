{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "jsx": "preserve",
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "paths": {
      "@mini-ui/*": ["packages/*"]
    }
  },
  "exclude": [
    "node_modules",
    "**/__tests__",
    "dist/**"
  ]
}
